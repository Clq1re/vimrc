{
  // ===== General ======
  "coc.preferences.colorSupport": true,
  "git.enableGutters": false,

  // ===== Coc-list ======
  "list.insertMappings": {
    "<C-c>": "do:exit",
    "<C-j>":"do:next",
    "<C-k>":"do:previous",
    "<C-v>":"action:vsplit",
    "<C-s>":"action:split"
  },
  "list.normalMappings": {
    "<C-c>": "do:exit",
    "<C-j>":"do:next",
    "<C-k>":"do:previous",
    "<C-v>":"action:vsplit",
    "<C-s>":"action:split"
  },
  "list.source.files.excludePatterns": ["**/node_modules/**"],

  // ===== Completion ======
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 20,

  // ===== Disagnostic ======
  "diagnostic.errorSign": "Ã—",
  "diagnostic.warningSign": "!",
  "diagnostic.infoSign": "?",

  // ===== JS ======
  "tsserver.enableJavascript": true,
  "typescript.format.enabled": false,
  "prettier.eslintIntegration": true,
  "eslint.filetypes": ["javascript", "typescript", "typescriptreact", "javascriptreact", "typescript.tsx"],
  "eslint.autoFixOnSave": false,
  "eslint.autoFix": false,
  "prettier.disableLanguages": [],
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "typescript", "typescriptreact", "json", "javascriptreact", "vue"],
  "emmet.includeLanguages": {
    "vue-html": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact",
    "tsx": "html"
  },
  "vetur.format.defaultFormatter.html":"js-beautify-html",

  // ===== Server ======
  "languageserver": {
    "sorbet": {
      "command": "srb",
      "args": ["tc", "--lsp", "--enable-all-experimental-lsp-features"],
      "filetypes": ["ruby"],
      "rootPatterns": ["sorbet/config"],
      "initializationOptions": {},
      "settings": {}
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  },

  // ===== Go ======
  "go.goplsOptions": {
    "completeUnimported": true
  }
}
